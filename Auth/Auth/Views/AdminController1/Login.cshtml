@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div>
        <label>Usename</label>
        <input type="text" name="username" required/>
    </div>
    <div>
        <label>Password</label>
        <input type="text" name="password" required/>
    </div>
    <button type="submit">Login</button>
</form>
